<%# cibler toutes les  %>
<% if @owner_bookings.where(status: "En attente").count == 0%>
  <div class="container"><p>Vous n'avez aucune demande en attente.</p></div>
<% else %>
  <div class="d-flex align-items-center flex-column">
    <% @owner_bookings.each do |owner_booking|  %>
      <% if owner_booking.status == "En attente"%>
        <div class="card-status-booking rounded-5 p-2 mb-3">
          <div class="card-booking-img-container rounded-4"><%= cl_image_tag owner_booking.tool.photo.key, class: "card-booking-img rounded-4" %></div>
          <div class="card-status-detail">
            <p class="m-0"><%= owner_booking.tool.name %></p>
            <p class="m-0">Du <%= owner_booking.start_date %> au <%= owner_booking.end_date %></p>
            <p class="m-0"><%= owner_booking.tool.price %>‚Ç¨/jour</p>
          </div>
          <div class="w-25 h-100 d-flex justify-content-between align-items-center">
            <%= button_to tool_booking_path(owner_booking.tool.id, owner_booking.id, status: "Accept√©e"), method: :patch, class: "button-status button-status-add rounded-4" do %>
              <i class="fa-solid fa-check d-block"></i>
            <% end %>
            <%= button_to tool_booking_path(owner_booking.tool.id, owner_booking.id, status: "Refus√©e"), method: :patch, class: "button-status button-status-reject rounded-4" do %>
              <i class="fa-solid fa-xmark d-block"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

